{
  "extends": "@falcon/tsconfig/nextjs.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strictNullChecks": true,
    "incremental": false,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowJs": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/(lex)/chat/api/actions.tsx",
    "app/(lex)/chat/components/example-messages.tsx",
    "server/ai/rag/qdrant/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
