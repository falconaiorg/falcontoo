{
  "compilerOptions": {
    "composite": true, // Allows projects to be built separately and included in parent projects
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["packages/**/*", "apps/**/*"],
  "exclude": ["node_modules"]
}
