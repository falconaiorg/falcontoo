{
  "name": "falconbase",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "clean": "turbo run clean && rimraf node_modules",
    "dev": "turbo run dev",
    "build-base": "turbo run build",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "with-env": "dotenv -e .env -e .env.local --",
    "build": "dotenv -e .env -e .env.local -- turbo run build",
    "lex:dev": "pnpm with-env pnpm -F @falcon/lex run dev",
    "lex:build": "pnpm with-env pnpm -F @falcon/lex run build",
    "draco:dev": "pnpm with-env pnpm -F @falcon/draco run dev",
    "draco:build": "pnpm with-env pnpm -F @falcon/draco run build"
  },
  "pnpm": {
    "overrides": {
      "@langchain/core": "^0.2.0"
    }
  },
  "engines": {
    "node": ">=22.1.0",
    "pnpm": ">=8.15.0"
  },
  "devDependencies": {
    "turbo": "^1.3.0",
    "typescript": "^5.4.5",
    "vercel": "^34.2.4",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "rimraf": "^5.0.1"
  }
}
